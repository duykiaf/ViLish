<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/primaryColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/md_txt</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/x_sm</item>
        <item name="boxCornerRadiusBottomStart">@dimen/x_sm</item>
        <item name="boxCornerRadiusTopEnd">@dimen/x_sm</item>
        <item name="boxCornerRadiusTopStart">@dimen/x_sm</item>
    </style>

    <style name="EdtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lg</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/md_txt</item>
    </style>
</resources>