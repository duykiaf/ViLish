<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/successfulNotificationLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/green_bg"
    android:padding="@dimen/x_sm"
    android:layout_marginHorizontal="@dimen/xx_sm"
    android:layout_marginTop="@dimen/x_sm">

    <ImageView
        android:id="@+id/tickIcon"
        android:layout_width="@dimen/x_md"
        android:layout_height="@dimen/x_md"
        android:src="@drawable/check_circle_ic"
        app:layout_constraintBottom_toBottomOf="@id/successfulNotificationLayout"
        app:layout_constraintStart_toStartOf="@id/successfulNotificationLayout"
        app:layout_constraintTop_toTopOf="@id/successfulNotificationLayout"
        app:tint="@color/white"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x_sm"
        app:layout_constraintBottom_toBottomOf="@id/tickIcon"
        app:layout_constraintEnd_toEndOf="@id/successfulNotificationLayout"
        app:layout_constraintStart_toEndOf="@id/tickIcon"
        app:layout_constraintTop_toTopOf="@id/tickIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>