<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/errNotificationLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/xx_sm"
    android:layout_marginTop="@dimen/x_sm"
    android:background="@drawable/light_red_bg"
    android:padding="@dimen/x_sm">

    <ImageView
        android:id="@+id/errorIcon"
        android:layout_width="@dimen/x_md"
        android:layout_height="@dimen/x_md"
        android:contentDescription="@string/app_name"
        android:src="@drawable/error_outline_ic"
        app:layout_constraintBottom_toBottomOf="@id/errNotificationLayout"
        app:layout_constraintStart_toStartOf="@id/errNotificationLayout"
        app:layout_constraintTop_toTopOf="@id/errNotificationLayout"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/errMessageTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x_sm"
        app:layout_constraintBottom_toBottomOf="@id/errorIcon"
        app:layout_constraintEnd_toEndOf="@id/errNotificationLayout"
        app:layout_constraintStart_toEndOf="@id/errorIcon"
        app:layout_constraintTop_toTopOf="@id/errorIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>