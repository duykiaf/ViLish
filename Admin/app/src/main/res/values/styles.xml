<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/x_sm</item>
        <item name="boxCornerRadiusBottomStart">@dimen/x_sm</item>
        <item name="boxCornerRadiusTopEnd">@dimen/x_sm</item>
        <item name="boxCornerRadiusTopStart">@dimen/x_sm</item>
        <item name="android:textColorHint">@color/primaryColor</item>
    </style>

    <style name="PasswordInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/primaryColor</item>
    </style>

    <style name="EdtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lg</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/heading_4</item>
    </style>

    <style name="PasswordEdtStyle" parent="EdtStyle">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="TextMultilineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/xlg</item>
        <item name="android:layout_marginTop">@dimen/sm</item>
        <item name="android:background">@drawable/blue_border_bg</item>
        <item name="android:gravity">start</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:paddingTop">@dimen/xx_sm</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/heading_4</item>
    </style>

    <style name="Obligatory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/obligatory</item>
        <item name="android:textColor">@color/dangerColor</item>
    </style>

    <style name="TextLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/xx_sm</item>
        <item name="android:layout_marginTop">@dimen/md</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">@dimen/heading_4</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lg</item>
        <item name="android:layout_marginTop">@dimen/sm</item>
        <item name="android:paddingStart">@dimen/sm</item>
        <item name="android:paddingEnd">@dimen/sm</item>
        <item name="android:background">@drawable/blue_border_bg</item>
        <item name="android:textSize">@dimen/heading_3</item>
    </style>
</resources>