<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/xx_sm"
    tools:context=".ui.SignInFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/md"
        android:text="@string/welcome_back"
        android:textAlignment="center"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/heading_1"
        android:textStyle="italic|bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/md"
        android:text="@string/sign_in"
        android:textAlignment="center"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/heading_2"
        android:textStyle="italic|bold" />

    <EditText
        android:id="@+id/emailEdt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lg"
        android:layout_marginTop="@dimen/md"
        android:background="@drawable/blue_border_bg"
        android:hint="@string/email"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="@dimen/xx_sm"
        android:textColor="@color/primaryColor"
        android:textColorHint="@color/primaryColor"
        android:textSize="@dimen/heading_4" />

    <EditText
        android:id="@+id/passwordEdt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lg"
        android:layout_marginTop="@dimen/md"
        android:background="@drawable/blue_border_bg"
        android:drawableEnd="@drawable/eye_crossed_ic"
        android:hint="@string/password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/xx_sm"
        android:textColor="@color/primaryColor"
        android:textColorHint="@color/primaryColor"
        android:textSize="@dimen/heading_4" />

    <androidx.cardview.widget.CardView
        android:id="@+id/signInBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lg"
        android:layout_marginTop="@dimen/md"
        app:cardBackgroundColor="@color/primaryColor"
        app:cardCornerRadius="@dimen/x_sm">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/md"
                android:layout_height="@dimen/md"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/xx_sm"
                android:layout_toLeftOf="@id/signInText"
                android:visibility="gone" />

            <TextView
                android:id="@+id/signInText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/sign_in"
                android:textColor="@color/white"
                android:textSize="@dimen/heading_3"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/forgotPwdTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/md"
        android:text="@string/forgot_password"
        android:textAlignment="center"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/heading_4" />

</LinearLayout>